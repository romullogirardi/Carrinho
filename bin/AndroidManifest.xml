<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.romullogirardi.smartlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_cart"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
		
        <activity
            android:name="com.romullogirardi.carrinho0main.view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.romullogirardi.carrinho1items.view.ItemsActivity"
            android:label="@string/lista_de_itens"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.romullogirardi.smartlist.MainActivity" />
        </activity>
        <activity
            android:name="com.romullogirardi.carrinho2itemsamount.view.ItemsAmountActivity"
            android:label="@string/lista_de_compras"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.romullogirardi.smartlist.MainActivity" />
        </activity>
    </application>

</manifest>